<!DOCTYPE html>
<html lang="en" class="h-100">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="" />
    <meta name="author" content="JD" />
    <title>DSU Chat</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/font/bootstrap-icons.css"
    />
    <style>
      img {
        max-height: 60vh;
        height: auto;
        width: auto;
      }
      
      .carousel-control-prev, .carousel-control-next {
        max-height: 75%;
      }
    </style>
     
  </head>

  <body class="d-flex flex-column h-100">
    <header class="p-2 fixed-top bg-success text-white bg-opacity-75">
      <div class="container">
        <div class="d-flex flex-wrap align-items-center justify-content-center">
          <h1>DSU To Do</h1>
        </div>
      </div>
    </header>

    <main class="flex-shrink-0 my-5">
      <div class="container my-5" id="ilista">
       
    </div>
</main>

<footer class="footer mt-auto py-3 bg-success text-white bg-opacity-75">
    <div class="container">
        <div class="input-group mb-3 d-flex flex-wrap align-items-center justify-content-center">
            <input type="text" class="form-control" class="form-control-plaintext" id="icreateormodify" value=''>
            <a class="btn btn-outline-light" type="button" id="icreateormodifybutton" onclick='create_()' >Create</a>
            </div>
        <div class="d-flex flex-wrap align-items-center justify-content-center">
          Copyright Telus
        </div>
      </div>
    </footer>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>

    <script>
        var current = 0;
        var countelements = 0
        var group = document.getElementById('ilista')
        function create_() {
            if(current === 0 ){
                let createormodify = document.getElementById('icreateormodify').value;
                countelements += 1;
                let divLista = document.createElement('div')
                divLista.className = 'input-group mb-3'
                divLista.id = `elista${countelements}`
                divLista.innerHTML = `
                <span class="input-group-text" id="basic-addon1" >Task</span>
                <div class="input-group-text">
                <input class="form-check-input mt-0" type="checkbox"  select aria-label="Radio button for following text input" onchange="mark(${countelements})" id='ickeck${countelements}'>
                </div>
                <input type="text"  class="form-control" readonly class="form-control-plaintext" id="itask${countelements}" value='${createormodify}'>
                <button type="submit" name="id" value=""  class="btn btn-warning btn-lg border-0 rounded-0" onclick='modify_(${countelements})'>Modify</button>
                <button type="submit" name="id" class="btn btn-danger btn-lg border-0 rounded-0"" onclick='delete_(${countelements})'>Delete</button>
                </div>`
                let headersList = {
                "Accept": "*/*",
                "User-Agent": "Thunder Client (https://www.thunderclient.com)"
                }

                fetch("http://localhost:3030/icreate", { 
                method: "POST",
                headers: headersList
                }).then(function(response) {
                return response.text();
                }).then(function(data) {
                console.log(data);
                })
                
                group.appendChild(divLista)
            }else{
                let createormodify = document.getElementById('icreateormodify').value;
                let tempo = document.getElementById(`itask${current}`);
                tempo.value = createormodify;

                document.getElementById('icreateormodifybutton').innerText = 'Create';
                current = 0;
                let headersList = {
                "Accept": "*/*",
                "User-Agent": "Thunder Client (https://www.thunderclient.com)"
                }

                fetch("http://localhost:3030/iupdate", { 
                method: "PUT",
                headers: headersList
                }).then(function(response) {
                return response.text();
                }).then(function(data) {
                console.log(data);
                })
            }
            document.getElementById('icreateormodify').value = '';
        }
            
        function modify_(id) {
            let tempo = document.getElementById(`itask${id}`).value
            document.getElementById('icreateormodify').value = tempo;
            document.getElementById('icreateormodifybutton').innerText = 'Update';
            current = id;
        }
        
        function delete_(id) {
            let tempo = document.getElementById(`elista${id}`)
            tempo.remove()
            let headersList = {
            "Accept": "*/*",
            "User-Agent": "Thunder Client (https://www.thunderclient.com)"
            }

            fetch("http://localhost:3030/idelete", { 
            method: "DELETE",
            headers: headersList
            }).then(function(response) {
            return response.text();
            }).then(function(data) {
            console.log(data);
            })
        }

        function mark(id) {
            let tempo = document.getElementById(`itask${id}`)
            if(tempo.checked == false){
                tempo.className = 'form-control form-control-plaintext text-decoration-line-through'
                tempo.checked = true;
            }else{
                tempo.className = 'form-control form-control-plaintext'
                tempo.checked = false;
            }
            let headersList = {
            "Accept": "*/*",
            "User-Agent": "Thunder Client (https://www.thunderclient.com)"
            }

            fetch("http://localhost:3030/imark", { 
            method: "POST",
            headers: headersList
            }).then(function(response) {
            return response.text();
            }).then(function(data) {
            console.log(data);
            })
        }



    </script>

  </body>
</html>
